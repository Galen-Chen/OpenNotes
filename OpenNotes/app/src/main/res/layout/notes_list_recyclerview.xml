<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_list_rootView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/date_create_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:textColor="#4d9def"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/notes_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_create_view"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#0a0a0a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/notes_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes_list_type"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:textColor="#0a0a0a"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_for_noteslist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_margin="10dp"/>


</RelativeLayout>